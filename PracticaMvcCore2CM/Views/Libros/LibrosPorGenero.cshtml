@model List<Libro>

@foreach(Libro libro in Model)
{
<div class="card-group">
    <div class="card">
        <img src="/~images/@libro.Portada" class="card-img-top" style="width: 200px; height: 250px; margin: 0 auto">
        <div class="card-body">
            <h5 class="card-title">@libro.Autor</h5>
        </div>
    </div>
</div>
}

