@using PracticaMvcCore2CM.Extensions
@model PracticaMvcCore2CM.Models.Libro

@{
    ViewData["Title"] = "DetallesLibros";
}

@{
    List<int> carrito =
                        Context.Session.GetObject<List<int>>("CARRITO");
}

<h1>Detalles del Libro <span style="color: red">@Model.Titulo </span></h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Editorial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Editorial)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Portada)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/@Model.Portada" width="400" height="350"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resumen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Resumen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            <b>@Html.DisplayFor(model => model.Precio) € </b>
        </dd>
    </dl>
</div>
<div>
    @if(carrito == null)
    {
        <a asp-controller="Libros" asp-action="DetallesLibros" asp-route-idlibro="@Model.IdLibro" asp-route-idcarrito="@Model.IdLibro" class="btn btn-info">
            Comprar
        </a>
    }
    else
    {
        if (carrito.Contains(Model.IdLibro))
        {
            <a asp-controller="Libros" asp-action="DetallesLibros" asp-route-idlibro="@Model.IdLibro" asp-route-ideliminar="@Model.IdLibro" class="btn btn-danger">
                En Carrito
            </a>
        }
        else
        {
            <a asp-controller="Libros" asp-action="DetallesLibros" asp-route-idlibro="@Model.IdLibro" asp-route-idcarrito="@Model.IdLibro" class="btn btn-info">
                Comprar
            </a>
        }   
    }
</div>  
