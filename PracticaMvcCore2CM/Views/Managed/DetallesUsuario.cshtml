@model Usuario

<div class="container mt-5 d-flex justify-content-center">

            <div class="card p-3">

                <div class="d-flex align-items-center">

                    <div class="image">
                    <img src="~/images/@Model.Foto" class="rounded" width="155" >
                </div>

                <div class="ml-3 w-100">
                    
                   <h4 class="mb-0 mt-0">@Model.Nombre @Model.Apellidos</h4>
                   <span>@Model.Email</span>

                </div>

                    
                </div>
                
            </div>
             
         </div>